<% if talentist_signed_in? && current_talentist %>

  <div class="talent-card-placement placement-talentist">
    <div class="talent-card startup-card">

      <div class="border">

        <div class="talent-job">
          <h2><%= headhunter.firstname.present? ? headhunter.firstname : "Pas infos" %> <%= headhunter.name.present? ? headhunter.name : 'Pas infos' %></h2>
        </div>
        <div class="talent-job">
          <p>de <%= headhunter.startup.name.present? ? headhunter.startup.name : "No-Name" %></p>
        </div>

        <div class="background-img background-img-talentist">
          <!-- <img src="assets/rawpixel-617400-unsplash.jpg" class="img-de-fond" alt=""> -->
          <%= image_tag "rawpixel-617400-unsplash.jpg", class: "img-de-fond" %>
        </div>

        <div class="accepeter-talent accepeter-startup">
          <%= simple_form_for headhunter, url: to_validate_headhunter_path(headhunter) do |f| %>
          <div class="btn-validate">
            <div class="<%= "green_validation" if headhunter.validated == true %>">
              <%= f.submit "Accepter"%>
            </div>
            <div class="<%= "red_validation" if headhunter.validated === false %>">
              <%= f.submit "Refuser" %>
            </div>
          </div>
          <% end %>
        </div>


        <div class="lien-messagerie-profil">
          <%= link_to "Messages", headhunter_conversation_path(headhunter.id, headhunter.mailbox.conversations.last)%>
          <%= link_to "Profil", headhunter_path(headhunter)%>
        </div>

      </div>
    </div>
  </div>

<% else %>

  <div class="talent-card-placement">
    <div class="talent-card startup-card">

      <div class="border">

        <div class="talent-job">
          <h2><%= headhunter.startup.name.present? ? headhunter.startup.name : "No-Name" %></h2>
        </div>

        <div class="background-img">
          <!-- <img src="assets/rawpixel-617400-unsplash.jpg" class="img-de-fond" alt=""> -->
          <%= image_tag "rawpixel-617400-unsplash.jpg", class: "img-de-fond" %>
        </div>

        <div class="talent-info">
          <div class="talent-info-item card-dispsition">
            <p class="icon icon-info"><i class="fas fa-map-marker-alt"></i></p>
            <p><%= headhunter.startup.address.present? ? headhunter.startup.address : "Pas info" %></p>
          </div>
          <div class="talent-info-item card-dispsition">
            <p class="icon icon-info"><i class="fas fa-link"></i></p>
            <p><a href="<%= headhunter.startup.link %>" target="_blank" >Voir le site</a></p>
          </div>
        </div>

        <div class="talent-description hidden-xs">
          <p><%= headhunter.startup.overview.present? ? headhunter.startup.overview : "pas d'info" %></p>
        </div>


        <!-- Lien vers le profil de la SU -->
        <div class="talent-more talent-more-startup">
          <p><%= link_to "Voir le profil", headhunter_path(headhunter)%></p>
        </div>

      </div>
    </div>
  </div>

<% end %>
