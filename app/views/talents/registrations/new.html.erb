<h2>Qui se cache derrière ce Talent?</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <h3>Info de base</h3>
  <div class="form-inputs">
    <%= f.input :firstname, required: true, autofocus: true, placeholder: "Prénom", label: "Nom" %>
    <%= f.input :name, required: true, autofocus: true, placeholder: "Nom", label: false %>
    <%= f.input :email, required: true, autofocus: true, placeholder: "exemple@gmail.com", label: "Compte"  %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "Mot de passe", label: false %>
    <%= f.input :password_confirmation, required: true, placeholder: "Confirmation du mot de passe", label: false %>
    <%= f.input :phone, required: true, autofocus: true, placeholder: "06 01 02 03 05", label: "Téléphone" %>
    <%= f.input :city, required: true, autofocus: true, placeholder: "Ville", label: false %>
    <%= f.input :cv %>
    <%= f.input :cv_cache, as: :hidden %>
    <%= f.input :linkedin, autofocus: true, placeholder: "https://linkedin.com/demoi", label: "Linkedin" %>
    <%= f.input :job_ids, collection:Job.all, label: "Secteur actuel", placeholder:'Marketing'%>
    <%= f.input :hobby_ids, collection: Hobby.all, input_html: { class:"select2", multiple: "multiple"}, include_blank: true, label:"Loisir (max: 5)" %>
  </div>

  <div class="form-actions">
    <%= link_to 'Précédent', root_path %>
    <%= f.button :submit, "Suivant" %>
  </div>
<% end %>

<%= render "talents/shared/links" %>
