<div class="blue-background">
  <div class="titre-section-icon"><i class="titre-section-icon-illu fas fa-angle-double-right"></i></div>
  <h2 class="titre-section">Modifier <strong>mon compte</strong></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>


      <div class="row">
        <div class="col-lg-6 col-xs-12">
        <p class="label-edit no-margin">Email</p>
        <div class="margin-right-15 no-margin-xs">
          <%= f.input :email, required: true, autofocus: true, label: false, :input_html => { style: "width: 100%" } %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-6 col-xs-12">
          <p class="label-edit no-margin requis">Mot de passe actuel</p>
          <div class="margin-right-15 no-margin-xs">
            <%= f.input :current_password, label: false, required: true, :input_html => { style: "width: 100%" }, hint: "Nous avons besoin du mot de passe actuel pour confirmer les changements" %>
          </div>
        </div>
      </div>

      <div class="row margin-top-15">
        <div class="col-lg-6 col-xs-12">
          <p class="label-edit no-margin">Nouveau mot de passe</p>
          <div class="margin-right-15 no-margin-xs">
            <%= f.input :password, label: false, autocomplete: "off", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), hint:"Laisser vide si vous ne voulez pas changer", :input_html => { style: "width: 100%" } %>
          </div>
        </div>
        <div class="col-lg-6 col-xs-12 margin-top-15-xs">
          <p class="label-edit no-margin">Confirmation mot de passe</p>
          <%= f.input :password_confirmation, label: false, :input_html => { style: "width: 100%" } %>
        </div>
      </div>

      <div class="margin-top-30">
        <div class="titre-section-icon"><i class="titre-section-icon-illu fas fa-angle-double-right"></i></div>
        <h2 class="titre-section">Supprimer <strong>mon compte</strong></h2>
        <div style="display: flex; justify-content: center;">
          <p style="margin-right: 10px">Voulez-vous supprimer votre compte ?</p>
          <%= link_to registration_path(resource_name), data: { confirm: "Attention, toutes les informations et conversations seront définivement supprimées, Voulez-vous continuer ?" }, method: :delete do %>
              OUI
          <% end %>
        </div>
      </div>

      <div class="form-actions">
        <div class="form-actions">
          <%= link_to talent_path(f.object), class:"btn-edit red-border red margin-right-30" do %>
            Annuler
          <% end %>
          <%= f.submit "Valider", class: "btn-edit" %>
        </div>

      </div>
  <% end %>
</div>
