            <label for="email">Email</label>
            <input type="email" name="talent[email]" id="talent_email" class="form-control" autofocus="autofocus" placeholder="exemple@gmail.com">
            <%# <input type="email" name="email" id="email" class="form-control" placeholder="email@example.com"> %>
          </div>
          <div class="form-group mb-4">
            <label for="password">Mot de passe</label>
            <input type="password" name="talent[password]" id="talent_password" class="form-control" placeholder="*********" >
            <%# <input type="password" name="password" id="password" class="form-control" placeholder="enter your passsword"> %>
          </div>
          <%= content_tag(:div, flash[:alert], :id => "flash_alert ", :style => "color: red; margin-left: 10%;") if flash[:alert] %>
          <%= f.button :submit, "Se connecter", { :class => "btn btn-block login-btn"} %>
          <%# <input name="login" id="login" class="btn btn-block login-btn" type="button" value="Se connecter"> %>

          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), { class: "forgot-password-link" } %>
            <%# <a href="#!" class="forgot-password-link">Forgot password?</a> %>
          <% end -%>
          <%#= link_to omniauth_authorize_path(:talent, :linkedin), :class => "button-linkedin" do %>
            <%# <p class="text-align-center"><i class="fab fa-linkedin"></i> Se connecter avec Linkedin</p> %>
          <%# end %>

          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <p class="login-wrapper-footer-text">Pas encore de compte ? <%= link_to "Inscris-toi", new_talent_registration_path, :class => "text-reset" %></p>
            <%# <a href="#!" class="text-reset">Register here</a> %>
            <%# <%= link_to "S'inscrire", new_talent_registration_path, :class => "form-btn form-btn-precedent" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

