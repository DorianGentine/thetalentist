

<div class="filter filter-talentist">

  <div class="filter-category">
    <p><i class="fas fa-filter"></i> Filtrer par MÉTIER</p>
    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fas fa-angle-down" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

          <li><a href=""><i class="fas fa-search"></i> DATA</a></li>
          <li><a href=""><i class="far fa-comments"></i> SALES</a></li>
          <li><a href=""><i class="fas fa-tachometer-alt"></i> MARKET</a></li>
          <li><a href=""><i class="fas fa-archive"></i> PRODUCT</a></li>
 <!--          <li>
            <a href="">Créer une alerte <i class="fas fa-bell"></i></a>
          </li> -->
        </ul>
      </div>
    </div>
  </div>


  <div class="filter-item hidden-xs hidden-sm">
    <%= link_to talents_path(tag: "Tous"), { :class=> "bordure-droite"} do %>
      <p><i class="fas fa-infinity"></i> Tous</p>
    <% end %>
    <%= link_to talents_path(tag: "Valider") do %>
      <p><i class="fas fa-check"></i> Validés</p>
    <% end %>
    <%= link_to talents_path(tag: "Refuser") do %>
      <p><i class="fas fa-times"></i> Refusés</p>
    <% end %>
    <%= link_to talents_path(tag: "En attende"), { :class=> "bordure-droite"} do %>
      <p><i class="far fa-clock"></i> En attente</p>
    <% end %>
    <%= link_to talents_path(tag: "Visible") do %>
      <p><i class="far fa-eye"></i> Visible</p>
    <% end %>
    <%= link_to talents_path(tag: "Invisible") do %>
      <p><i class="far fa-eye-slash"></i> Invisible</p>
    <% end %>
  </div>

<!--

    <div class="alert-creation hidden-xs hidden-sm">
      <a href="">Créer une alerte <i class="fas fa-bell"></i></a>
    </div> -->


</div>

<section class="container">

  <!-- Division pour résultats de recherche -->
  <div class="search-results">
    <p><strong><%= pluralize(@talents.count, 'Profil')%></strong> correspondent à votre recherche '<em><%= @titre %></em>'</p>
  </div>

  <div>
    <p id="update_formation_title"><strong><%= pluralize( @formations.count, 'Formation') %> </strong> doivent être complété</p>

    <div style="">
      <%= @formations.each do |formation| %>
        <%= render 'talentists/formation', formation: formation %>
      <% end %>
    </div>
  </div>

  <!-- Répertoire des talents -->
  <div class="cards-repertory">

    <% @talents.each do |talent| %>
      <%= cache talent do %>
        <%= render 'headhunters/talent-card', talent: talent %>
      <% end %>
    <% end %>

  </div>

  <!-- Choix des pages -->
 <!--  <div class="page-choice">
    <p>Préc. <strong>1</strong> 2 3 Suiv.</p>
  </div> -->
</section>
