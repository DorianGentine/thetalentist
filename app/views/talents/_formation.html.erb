<div id="modal_formation" class="modal">

  <div class="modal-content">

    <div class="modal-header">
      <h3>Modifiez vos formations</h3>

      <!-- TODO ajouter un btn supprimer -->
      <span class="close">
        <p>&times;</p>
      </span>
    </div>

    <div class="modal-body">
      <%= simple_form_for @talent, method: :put do |f| %>

        <div id="formations">
          <%= f.simple_fields_for :talent_formations do |u| %>
            <%= render 'steps_talent_infos/formation_fields', :f => u %>
          <% end %>
          <div class='links'>
            <%= link_to_add_association 'Ajouter formation', f, :talent_formations, :partial => 'steps_talent_infos/formation_fields', class: "form-hobby-add" %>
          </div>
        </div>

        <div class="form-line">
          <div class="form-semi-line">
            <p class="form-label form-label-semi-line requis">Compétences techniques</p>
            <div class="form-line">
              <%= f.input :techno_ids, collection: Techno.all, label: false, input_html: { class:"select2", multiple: "multiple", style: "width: 100%;"}, multiple: true, required: true %>
            </div>
          </div>

          <div class="form-semi-line">
            <p class="form-label form-label-semi-line requis">Compétences linguistiques</p>
            <div class="form-line flex-vertical">
              <%= f.simple_fields_for :talent_languages do |u| %>
                <%= render 'steps_talent_infos/language_fields', :f => u %>
              <% end %>
              <div class='links'>
                <%= link_to_add_association 'Ajouter langue', f, :talent_languages, :partial => 'steps_talent_infos/language_fields' %>
              </div>
            </div>
          </div>
        </div>

        <div class="form-actions">
          <%= f.submit "Continuer", class: "b-btn form-btn form-btn-suivant" %>
        </div>


      <% end %>
    </div>
  </div>
</div>
