<!-- Titre section -->
  <div class="titre-section-icon"><i class="titre-section-icon-illu fas fa-angle-double-right"></i></div>
  <h2 class="titre-section">Remplissez votre <strong>profil</strong></h2>

<%= simple_form_for @talent, remote: false  do |f|%>

    <%= render 'shared/change_photo', f: f %>

    <div class="row align-items-baseline margin-top-30">

      <label class="col-lg-2 col-xs-12 label-edit requis" for="talent_firstname">Civilité</label>

      <div class="col-lg-5 col-xs-12 margin-bottom-15-xs">
        <%= f.input :firstname, required: true, autofocus: false, placeholder: "Prénom", label: false, :input_html => { style: "width: 100%"}, error: f.object.errors.messages[:firstname][0] %>
      </div>

      <div class="col-lg-5 col-xs-12 margin-bottom-15-xs">
        <%= f.input :last_name, required: true, autofocus: false, placeholder: "Nom", label: false, :input_html => { style: "width: 100%"}, error: f.object.errors.messages[:last_name][0] %>
      </div>

    </div>

    <div class="row align-items-baseline margin-top-30">
      <label class="col-lg-2 col-xs-12 label-edit requis" for="talent_phone">Téléphone</label>

      <div class="col-lg-4 col-xs-12">
        <%= f.input :phone, label: false, :input_html => { style: "width: 100%" }, error: f.object.errors.messages[:phone][0] %>
      </div>

      <label class="col-lg-2 col-xs-12 margin-top-15-xs label-edit requis" for="user_address">Ville actuelle</label>

      <div class="col-lg-4 col-xs-12">
        <%= f.input :city, label: false, :input_html => { style: "width: 100%" }, error: f.object.errors.messages[:city][0] %>
      </div>
    </div>

    <div class="row align-items-baseline margin-top-30">
      <%= f.simple_fields_for :talent_job do |u| %>
        <label class="label-edit col-lg-3 col-xs-12 requis">Mon&#8239;domaine  d'activité</label>
        <%= render 'talents/talent_job_fields', :u => u, f: f %>
      <% end %>
    </div>

  <!-- Titre section -->
    <div class="titre-section-icon margin-top-60"><i class="titre-section-icon-illu fas fa-angle-double-right"></i></div>
    <h2 class="titre-section margin-top-60">Me suivre <strong>sur :</strong></h2>

      <div class="row align-items-baseline margin-top-30">
        <label class="col-lg-2 col-xs-12 label-edit requis" for="talent_linkedin">Linkedin</label>

        <div class="col-lg-4 col-xs-12">
          <%= f.input :linkedin, label: false, :input_html => { style: "width: 100%" } %>
        </div>
      </div>

  <%= render 'edit_validations_buttons', f: f %>

<% end %>


<script>
  function zeroInput(val, id){
    if (val < 0) {
      document.getElementById(id).value = 0
    }
  }

</script>


