<div class="row">
<div class="col-lg-3"></div>
<!-- info générale sur le profil -->
<div class="col-lg-9">
  <%= simple_form_for @talent, url: update_profile_talent_path(@talent), method: :patch, remote: false  do |f|%>
    <%= f.input :firstname %>
    <%= f.input :name %>
    <%= f.button :submit, "Sauvegarder", :class => "submit_forgot_password" %>

  <% end %>



  <!-- info sur les formations et compétence -->
  <%= simple_form_for @talent, url: update_formation_and_skill_talent_path(@talent), method: :put, remote: false  do |f|%>
    <div id="formations" class="blue-background">
      <%= f.simple_fields_for :talent_formations do |u| %>
        <%= render 'steps_talent_infos/formation_fields', :f => u %>
      <% end %>
      <div class='links'>
        <%= link_to_add_association 'Ajouter formation', f, :talent_formations, :partial => 'steps_talent_infos/formation_fields', class: "form-hobby-add" %>
      </div>
    </div>
    <div id="form-p2-comp" class=" row">
      <div class="col-xs-12 col-lg-6">
        <div id="add-language" class="blue-background margin-right-background margin-top-background">
          <p class="form-label-font-size form-label-semi-line requis">Compétences linguistiques</p>
          <div class="add-language-line">
            <%= f.simple_fields_for :talent_languages do |u| %>
              <%= render 'steps_talent_infos/language_fields', :f => u %>
            <% end %>
            <div class='links'>
              <%= link_to_add_association 'Ajouter langue', f, :talent_languages, :partial => 'steps_talent_infos/language_fields' %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-lg-6">
        <div class="blue-background margin-left-background margin-top-background" id="competence-form">
          <div class="margin-competence">
            <p class="form-label-font-size form-label-semi-line requis">Compétences techniques</p>
            <%= f.input :techno_ids, collection: Techno.all, label: false, input_html: { class:"select2", multiple: "multiple", style: "width: 294px"}, multiple: true, required: true %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit "Continuer", class: "b-btn form-btn form-btn-suivant" %>
    </div>
  <% end %>




  <!-- info les experiences -->
  <%= simple_form_for @talent, url: update_experience_talent_path(@talent), method: :patch, remote: false  do |f|%>

  <% end %>





  <!-- info sur la prochaine aventure -->
  <%= simple_form_for @talent, url: update_next_aventure_talent_path(@talent), method: :patch, remote: false  do |f|%>


  <% end %>







  <!-- info sur le compte  -->
  <%= simple_form_for @talent do |f| %>

  <% end %>



</div>
</div>
