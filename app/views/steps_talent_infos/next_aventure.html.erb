<% choices = ["Ambiance", "International", "Produit", "Rémunération", "Sens", "Valeurs", "Mission", "Management", "Worklife balance", "Impact"]  %>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<div class="form-container simple-new-talent" data-page="4">

  <%= render 'shared/formprogression' %>

  <h2 class="form-titre-page"><i class="far fa-compass"></i> Quelle direction <strong>souhaitez-vous</strong> prendre ?</h2>

  <%= simple_form_for @talent, url: wizard_path, method: :put do |f| %>
  <%= f.error_notification %>

    <%= f.simple_fields_for :next_aventures do |u| %>
      <div class="blue-background" id="next_aventure-form">

        <div class="row">
          <div class="col-xs-12 col-lg-6">
            <div class="form-line form-line-next-aventure">
              <p class="form-label form-label-font-size label-next_aventure requis">Mobilité</p>
              <%= u.input :city, label: false, prompt:"ex: Paris", collection: [ "Ville actuelle", "Paris", "France", "Europe", "Hors Europe" ], :input_html => { :class => 'select2' } %>
            </div>
          </div>
          <div class="col-xs-12 col-lg-6">
            <div class="form-line form-line-next-aventure form-secteur">
              <p class="form-label form-label-font-size label-next_aventure requis">Secteur</p>
              <%= f.input :sector_ids, collection: Sector.all, input_html: { class:"select2", style: "width: 100%"}, include_blank: true, label: false %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-lg-6">
            <div class="form-line form-line-next-aventure">
              <p class="form-label form-label-font-size label-next_aventure requis">Type de contrat</p>
              <%= u.input :contrat, label: false, prompt:"ex: Freelance", collection: [ "CDI", "CDD", "Freelance", "Stage" ], :input_html => { :class => 'select2' } %>
            </div>
          </div>
          <div class="col-xs-12 col-lg-6">
            <div class="form-line form-line-next-aventure form-secteur">
              <p class="form-label form-label-font-size label-next_aventure"></p>
              <div style="display: flex; width: 80%">
                <%= u.input :btoc, label: "BTOC" %>
                <%= u.input :btob, label: "BTOB" %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-lg-6">
            <div class="form-line form-line-next-aventure">
              <p class="form-label form-label-font-size label-next_aventure requis" style="margin-left: -2%; width: 28%">Attentes salariales</p>
              <%= u.input :remuneration, label: false, hint: "package K€ annuel brut", collection: [ "30 - 40", "40 - 50", "50 - 70", "70 - 100", "100+" ], :input_html => { :class => 'select2' } %>
            </div>
          </div>
          <div class="col-xs-12 col-lg-6">
            <div class="form-line form-line-next-aventure form-secteur">
              <p class="form-label form-label-font-size label-next_aventure requis">Disponibilité</p>
              <%= u.input :availability, collection: ["Immédiate","- de 3 mois", "+ de 3 mois"], label: false, :input_html => { :class => 'select2' } %>
            </div>
          </div>
        </div>
      </div>


      <div class="row">
        <div class="col-xs-12 col-lg-6">
          <div id="add-language" class="form-semi-line blue-background margin-top-background margin-right-background ">
              <p class="form-label form-label-font-size label-next_aventure requis" id="add-words">Vos petits + ?</p>

              <%= f.simple_fields_for :your_small_plus do |e| %>
                <%= render 'your_small_plu_fields', :f => e %>
              <% end %>

            <div class='links' id="add-margin-left">
              <%= link_to_add_association 'Ajouter un +', f, :your_small_plus, :partial => 'your_small_plu_fields' %>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-lg-6">
          <div class="form-line form-line-next-aventure blue-background margin-top-background margin-left-background">
            <p class="form-label form-label-font-size label-next_aventure requis">
            Qu’attends-tu de ta prochaine aventure ?</p>
            <div>
              <p id="info-question-next_aventure">Sélectionne les 3 critères les plus importants à tes yeux et classe-les par ordre d’importance</p>
              <div class="form-line">
                <%= u.input :waiting_for_one, label: false, hint:"Choix n°1", collection: choices, :input_html => { :class => 'select2' } %>
                <%= u.input :waiting_for_two, label: false, hint:"Choix n°2", collection: choices, :input_html => { :class => 'select2' } %>
                <%= u.input :waiting_for_three, label: false, hint:"Choix n°3", collection: choices, :input_html => { :class => 'select2' } %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="blue-background margin-top-background">
        <div class="row">
          <p class="form-label-font-size requis left-p">Es-tu plutôt:</p>
          <div class="col-xs-12 col-lg-6 ">
            <div class="width-rang align-items-form">
              <p>Chasseur</p>
              <%= u.input :hunter_or_breeder, as: :range, input_html: { min: 0, max: 100, class:"slider", style:"width:100%;", id:"level_value_activity" }, label: false, wrapper: false %>
              <p>Éleveur</p>
            </div>
          </div>
          <div class="col-xs-12 col-lg-6">
            <div class="width-rang align-items-form">
              <!-- <p class="form-label-font-size requis">Es-tu plutôt:</p> -->
              <p>Créatif</p>
              <%= u.input :creative_or_pragmatic, as: :range, input_html: { min: 0, max: 100, class:"slider", style:"width:100%;", id:"level_value_activity" }, label: false, wrapper: false %>
              <p>Pragmatique</p>
            </div>
          </div>
        </div>
      </div>


      <div class="bloc-next-aventure blue-background margin-top-background">
        <div class="row">
          <div class="col-xs-12 col-lg-6">
            <p class="form-label-font-size label-next_aventure-lg requis">Quel est le rêve que tu remets toujours à demain ?</p>
            <%= u.input :dream, label: false, placeholder: "Description", as: :text, input_html: {rows: '4'} %>
          </div>
          <div class="col-xs-12 col-lg-6">
            <p class="form-label form-label-font-size label-next_aventure-lg requis">Y a-t-il une personnalité qui t’inspire ? Pourquoi ?</p>
            <%= u.input :famous_person, label: false, placeholder: "Description", as: :text, input_html: {rows: '4'} %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-lg-6">
            <p class="form-label form-label-font-size label-next_aventure-lg requis">Selon toi, qu’est-ce qu’un bon manager ?</p>
            <%= u.input :good_manager, label: false, placeholder: "Description", as: :text, input_html: {rows: '4'} %>
          </div>
          <div class="col-xs-12 col-lg-6">
            <p class="form-label form-label-font-size label-next_aventure-lg requis">Quel travail serais-tu prêt à effectuer gratuitement ?</p>
            <%= u.input :work_for_free, label: false, placeholder: "Description", as: :text, input_html: {rows: '4'} %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="bloc-next-aventure blue-background margin-top-background row">
      <div class="col-lg-5 col-lg-offset-4 form-line">
        <%= f.input :terms_of_condition, as: :boolean, label: false, required: true, autofocus: true%>
        <%= link_to 'Acceptez vous les conditions générale', mentions_legales_path %>
      </div>
    </div>


    <div class="form-actions">
      <%= link_to "Précedent", previous_wizard_path, class: "b-btn-link form-btn form-btn-precedent" %>
      <%= f.submit "Terminer", class: "b-btn form-btn form-btn-suivant" %>
    </div>

  <%= f.error_notification message: 'INFORMATIONS NON COMPLÈTES!', id: 'user_error_message', class: 'form_error' %>

  <% end %>


</div>












