<div class="nested-fields form-line row margin-bottom-15" id="diplome-form">
  <p class="col-lg-2 label-edit requis">Diplôme</p>
  <div class="col-xs-12 col-lg-3 margin-right-15">
    <%= f.association :formation, collection: Formation.all, prompt:"Établissement", label: false, input_html: { class:"select2"}  %>
  </div>
  <div class="col-xs-12 col-lg-3 margin-right-15">
    <%= f.input :title, placeholder: "Formation", label: false  %>
  </div>
  <div class="col-xs-12 col-lg-3">
    <%= f.input :year, label: false do %>
      <%= f.input :year, collection: (1980..2018.to_i).to_a.reverse,  label: false, input_html: { class: 'select2' } %>
    <% end %>
  </div>
  <div class="col-xs-12 col-lg-1" id="align-sup-btn">
    <%= link_to_remove_association f do %>
     <i class="fas fa-trash-alt"></i>
    <% end %>
  </div>
</div>


