<div class="nested-fields form-line" id= "diplome-form">
  <p class="form-label form-label-font-size requis">Diplôme</p>
  <div class="row" style="width: min-content; flex-grow: 1">
    <div class="col-xs-12 col-lg-4">
      <%= f.association :formation, collection: Formation.all, prompt:"Établissement", label: false, input_html: { class:"select2"}  %>
    </div>
    <div class="col-xs-12 col-lg-3">
      <%= f.input :title, placeholder: "Formation", label: false  %>
    </div>
    <div class="col-xs-12 col-lg-3">
      <%= f.input :year, label: false do %>
        <%= f.input :year, collection: (1980..2018.to_i).to_a.reverse,  label: false, input_html: { class: 'select2' } %>
      <% end %>
    </div>
    <div class="col-xs-12 col-lg-2" id="align-sup-btn">
      <%= link_to_remove_association "Supprimer", f %>
    </div>
  </div>
</div>


