$(document).ready(function() {

  let i = "relation_" + <%= @talent.id %>

  function refreshForm(innerHTML) {
    let newRelationForm = document.getElementById(i);
    newRelationForm.innerHTML = "";
    newRelationForm.innerHTML = innerHTML;
  }

  refreshForm('<%= j render "headhunters/relationship", headhunter: @headhunter, talent: @talent %>');


});
