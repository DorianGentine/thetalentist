$(document).ready(function() {

  const i = "relation_" + <%= @talent.id %>

  function refreshForm(innerHTML) {
    const newRelationForm = document.getElementById(i);
    newRelationForm.innerHTML = "";
    newRelationForm.innerHTML = innerHTML;
  }

  function refreshNavBar(innerHTML) {
    let navbar = document.getElementById("navbar");
    navbar.innerHTML = "";
    navbar.innerHTML = innerHTML;
  }


  refreshNavBar('<%= j render "shared/navbar" %>');
  refreshForm('<%= j render "headhunters/relationship", headhunter: @headhunter, talent: @talent %>');


});
