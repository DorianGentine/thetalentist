<% if headhunter_signed_in? && current_headhunter %>

  <!-- Avatar with dropdown menu -->
  <div class="navbar-wagon-item">
    <div class="dropdown">
      <div class="top-menu dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <div class="little-square">
          <hr class="first">
          <hr class="second">
          <hr class="third">
        </div>
        <h4 class="titre-menu hidden-xs">MENU</h4>
      </div>
      <ul class="dropdown-menu dropdown-top-menu">
        <li>
          <p><%= current_headhunter.firstname.capitalize %> <%= current_headhunter.name.capitalize %> :</p>
        </li>
        <li>
          <%= link_to headhunter_path(current_headhunter) do %>
            <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
          <% end %>
        </li>
        <li>
          <%= link_to "Talents", repertoire_path %>
        </li>
        <li>
          <%= link_to "Messagerie", conversation_path(current_headhunter.mailbox.conversations.last) %>
        </li>
        <li>
          <%= link_to destroy_headhunter_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>

