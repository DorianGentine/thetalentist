

<%= simple_form_for @contact, :html => { :class => "contact-form-grid" } do |f| %>
  <%= f.input :email, placeholder: "Votre email", label: false, :wrapper_html => { :class => 'small-width-input' } %>
  <%= f.input :name, placeholder: "Votre nom", label: false, :wrapper_html => { :class => 'small-width-input' } %>
  <%= f.input :phone, placeholder: "Votre téléphone", label: false, :wrapper_html => { :class => 'small-width-input' }  %>
  <%= f.input :subject, placeholder: "En savoir plus sur cet outil", label: false, :wrapper_html => { :class => 'small-width-input lastchild' } %>
  <%= f.input :message, as: :text, :input_html => { :style => 'width: 100%', :rows => 3 }, placeholder: "Message", label: false, :wrapper_html => { :class => 'large-width-input' }  %>
  <%= f.submit "Envoyer", class: "btn btn-primary btn-exercise btn-exercise-important contact_form_submit"%>
<% end %>



<div id="map_for_contact" style="width: 100%; height: 100px;" data-markers="<#%= @markers.to_json %>"></div>
