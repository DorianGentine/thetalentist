<div id="modal_<%= talent.id %>" class="modal">
  <!-- Modal content -->
  <div class="modal-content">

    <div class="modal-header" id="relation">
      <% if talent.experiences.present? && talent.experiences.last.position.present? %>
        <h3><%= talent.experiences.last.position.capitalize %></h3>
      <% end %>
      <div id="relation_<%= talent.id %>">
      <% if current_user.is_a?(Headhunter) %>
        <% if talent.is_connected_to?(@headhunter) %>
          <%= render 'headhunters/relationship', headhunter: @headhunter, talent: talent %>
        <% else %>
          <%= render 'relationships/form', headhunter: @headhunter, talent: talent %>
        <% end %>
      <% end %>
      </div>
      <span class="close" id="close_modal_<%= talent.id %>">
        <p>&times;</p>
      </span>
    </div>

    <div class="modal-body">
      <div class="upper-body">
        <div class="upper-left-body">
          <div class="talent-info">
            <div class="talent-info-item card-dispsition">
              <p class="icon icon-info"><i class="fas fa-map-marker-alt"></i></p>
              <p><%= talent.city %></p>
            </div>
            <div class="talent-info-item card-dispsition">
              <p class="icon icon-info"><i class="fas fa-code-branch"></i></p>
              <% if talent.btoc && talent.btob %>
                <p> BtoB & BtoC</p>
              <% elsif talent.btoc %>
                <p>BtoB</p>
              <% else %>
                <p>BtoC</p>
              <% end %>
            </div>
            <div class="talent-info-item card-dispsition">
              <p class="icon icon-info"><i class="fas fa-briefcase"></i></p>
              <p>CDI</p>
            </div>
            <div class="talent-info-item card-dispsition">
              <p class="icon icon-info"><i class="far fa-compass"></i></p>
              <% if talent.next_aventures.present? && talent.next_aventures.last.sectors.present? %>
                <p><%= talent.next_aventures.last.sectors.first.title.capitalize %></p>
              <% else %>
                <p> A remplire</p>
              <% end %>
            </div>
            <div class="talent-info-item card-dispsition">
              <p class="icon icon-info"><i class="far fa-calendar"></i></p>
              <p><%= 2018 - talent.experiences.last.starting.to_i %> ans d'expériences</p>
            </div>
          </div>
          <div class="talent-school">
            <p class="blue-background talent-school-item"><i class="fas fa-graduation-cap"></i><%= talent.talent_formations.last.formation.title %>,<%= talent.talent_formations.last.title %> - <%= talent.talent_formations.last.year %></p>
            <p class="white-background talent-school-item"><i class="fas fa-graduation-cap"></i><%= talent.talent_formations.first.formation.title %>,<%= talent.talent_formations.first.title %> - <%= talent.talent_formations.first.year %></p>
          </div>
        </div>
        <div class="upper-right-body">
          <p class="talent-metier"><i class="fas fa-search"></i> <%= talent.jobs.first.present? ? talent.jobs.first.title.upcase : "Full" %></p>
          <div class="illu-card illu-modal"></div>
        </div>
      </div>
      <div class="lower-body">
        <div class="lower-body-item lower-left-body">
          <h4><i class="far fa-id-badge"></i> PROFIL</h4>
          <div class="lower-body-item-content">
            <div>
              <h5>Qui suis-je ?</h5>
              <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore. Lorem ipsum dolor sit amet.</p>
            </div>
            <div>
              <h5>Le job de mes rêves</h5>
              <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore. Lorem ipsum dolor sit amet.</p>
            </div>
          </div>
        </div>
        <div class="lower-body-item lower-middle-body">
          <h4><i class="far fa-file-alt"></i> EXPÉRIENCES</h4>
          <div class="lower-body-item-content">
            <hr class="barre-pointee">
            <div class="talent-experiences">
              <% if  %>

              <% end %>
              <% talent.experiences.reverse_each do |experience| %>
                <% if experience.currently %>
                  <div class="placement-point-barre">
                    <div>
                      <div class="point-barre-pointee"></div>
                    </div>
                    <div class="placement-talent-experience">
                      <p class="experience-post"><%= experience.position.present? ? experience.position.upcase : false %></p>
                      <p class="experience-entreprise"><%= experience.company_type.title %></p>
                      <p class="experience-duree"><%= experience.starting %> - <%= experience.currently ? "Aujourd'hui" : experience.years %></p>
                    </div>
                  </div>
                <% end %>
              <% end %>
              <% talent.experiences.reverse_each do |experience| %>
                <% if !experience.currently %>
                  <div class="placement-point-barre">
                    <div>
                      <div class="point-barre-pointee"></div>
                    </div>
                    <div class="placement-talent-experience">
                      <p class="experience-post"><%= experience.position.present? ? experience.position.upcase : false %></p>
                      <p class="experience-entreprise"><%= experience.company_type.present? ? experience.company_type.title : false %></p>
                      <p class="experience-duree"><%= experience.starting %> - <%= experience.currently ? "Aujourd'hui" : experience.years %></p>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="lower-body-item lower-right-body">
          <div class="lower-right-body-item">
            <h4><i class="fas fa-sliders-h"></i> COMPÉTENCES</h4>
            <div class="talent-competences">
              <% talent.talent_skills.each do |skill| %>
                <p><%= skill.skill.title %></p>
              <% end %>
            </div>
          </div>
          <div class="lower-right-body-item">
            <h4><i class="fas fa-search-plus"></i> HOBBIES</h4>
            <div class="talent-competences">
              <% talent.talent_hobbies.each do |hobby| %>
                <p><%= hobby.hobby.title %></p>
              <% end %>
            </div>
          </div>
        </div>


