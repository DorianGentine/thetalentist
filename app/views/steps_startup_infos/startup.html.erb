<%= render 'shared/navbar' %>

<div class="form-container">

  <h2 class="form-titre-page" style="margin-top: 100px;"><i class="fas fa-briefcase"></i> Renseigner <strong>votre entreprise</strong> ?</h2>

  <%= simple_form_for @startup, url: wizard_path, method: :put do |f| %>

    <div class="form-grid blue-background">
      <p class="form-label form-label-font-size requis">Nom</p>
      <%= f.input :name, required: true, label: false %>
      <p class="form-label form-label-font-size form-label-right-grid">Création</p>
      <%= f.input :year_of_creation, collection: 2000..2018, prompt: "année de création", label: false  %>
    </div>

    <div class="form-grid blue-background margin-top-background">
      <p class="form-label form-label-font-size">Collaborateurs</p>
      <%= f.input :collaborators, label: false %>
      <p class="form-label form-label-font-size form-label-right-grid">Moyenne d'âge</p>
      <%= f.input :average_age, :input_html => { :type => "number" }, label: false %>
      <p class="form-label form-label-font-size">Adresse</p>
      <%= f.input :address, placeholder: '16 villa gaudelet 75011 paris', :input_html => { :id => "startup_address" }, label: false%>
      <p class="form-label form-label-font-size form-label-right-grid">Site internet</p>
      <%= f.input :link, label: false %>
    </div>

    <div class="form-actions">
      <%= link_to "Précedent", previous_wizard_path, class: "b-btn-link form-btn form-btn-precedent" %>
      <%= f.submit "Créer", class: "b-btn form-btn form-btn-suivant" %>
    </div>
  <% end %>

</div>

<%= render "shared/footer" %>

