<%= render 'shared/navbar' %>

<div class="form-container">

  <h2 class="form-titre-page" style="margin-top: 100px;"><i class="fas fa-briefcase"></i> Renseigner <strong>votre entreprise</strong> ?</h2>

  <%= simple_form_for @startup, url: wizard_path, method: :put do |f| %>

    <div class="blue-background">
      <div class="row">
        <p class="label-edit line-height-center no-margin col-lg-2 col-xs-12 requis">Raison sociale</p>
        <div class="col-lg-3 col-xs-12 margin-right-15 no-margin-xs">
          <%= f.input :name, required: true, label: false, input_html: { style: "width: 100%" } %>
        </div>
        <p class="label-edit line-height-center no-margin col-lg-2 col-xs-12 margin-top-15-xs">Création</p>
        <div class="col-lg-3 col-xs-12">
          <%= f.input :year_of_creation, collection: 2000..2018, prompt: "année de création", label: false, input_html: { style: "width: 100%" }  %>
        </div>
      </div>
    </div>

    <div class="blue-background margin-top-background">
      <div class="row">
        <p class="label-edit line-height-center no-margin col-lg-2 col-xs-12 requis">Collaborateurs</p>
        <div class="col-lg-3 col-xs-12 margin-right-15 no-margin-xs">
          <%= f.input :collaborators, label: false, input_html: { style: "width: 100%", min: "0", class: "sup-zero" } %>
        </div>
        <p class="label-edit line-height-center no-margin col-lg-2 col-xs-12 margin-top-15-xs">Moyenne d'âge</p>
        <div class="col-lg-3 col-xs-12">
          <%= f.input :average_age, label: false, input_html: { style: "width: 100%", min: "0", class: "sup-zero" } %>
        </div>
      </div>
      <div class="row margin-top-15">
        <p class="label-edit line-height-center no-margin col-lg-2 col-xs-12 requis">Adresse</p>
        <div class="col-lg-3 col-xs-12 margin-right-15 no-margin-xs">
          <%= f.input :address, placeholder: '16 villa gaudelet 75011 paris', :input_html => { :id => "startup_address" }, label: false, input_html: { style: "width: 100%" }%>
        </div>
        <p class="label-edit line-height-center no-margin col-lg-2 col-xs-12 margin-top-15-xs margin-top-15-xs">Site internet</p>
        <div class="col-lg-3 col-xs-12">
          <%= f.input :link, label: false, input_html: { style: "width: 100%" } %>
        </div>+
      </div>

    </div>

    <div class="form-actions">
      <%= link_to "Précedent", previous_wizard_path, class: "b-btn-link form-btn form-btn-precedent" %>
      <%= f.submit "Créer", class: "b-btn form-btn form-btn-suivant" %>
    </div>
  <% end %>

</div>



