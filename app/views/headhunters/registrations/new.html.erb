<%= render 'shared/navbar' %>

<div class="form-container">

  <h2 class="form-titre-page" style="margin-top: 100px;"><i class="far fa-id-badge"></i> Dites-nous qui <strong>vous êtes</strong> ?</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

  <div class="margin-auto-new-talent">
    <!-- Line 1 -->
      <div class="blue-background">
        <div class="row">
          <p class="label-edit line-height-center no-margin requis col-lg-2 col-xs-12">Prénom</p>
          <div class="col-lg-3 col-xs-12 margin-right-15 no-margin-xs">
            <%= f.input :firstname, required: true, autofocus: true, label: false, input_html: { style: "width: 100%" } %>
          </div>
          <p class="label-edit line-height-center no-margin col-lg-3 col-xs-12 requis margin-top-15-xs">Nom</p>
          <div class="col-lg-3 col-xs-12">
            <%= f.input :name, required: true, autofocus: true, label: false, input_html: { style: "width: 100%" } %>
          </div>
        </div>

    <!-- Line 2 -->
        <div class="row margin-top-15">
          <p class="label-edit line-height-center no-margin requis col-lg-2 col-xs-12">Email</p>
          <div class="col-lg-3 col-xs-12 margin-right-15 no-margin-xs">
            <%= f.input :email, required: true, autofocus: true, label: false, input_html: { style: "width: 100%" } %>
          </div>
        </div>
      </div>

    <!-- Line 3 -->
      <div class="blue-background margin-top-background">
        <div class="row">
          <p class="label-edit line-height-center no-margin requis col-lg-2 col-xs-12">Mot de passe</p>
          <div class="col-lg-3 col-xs-12 margin-right-15 no-margin-xs">
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false, input_html: { style: "width: 100%" } %>
          </div>
          <div class="col-lg-3 col-xs-12 margin-top-15-xs">
            <%= f.input :password_confirmation, required: true, placeholder: "Confirmation du mot de passe", label: false, input_html: { style: "width: 100%" } %>
          </div>
        </div>
      </div>

    <!-- Line 4 -->
      <div class="blue-background margin-top-background">
        <div class="row">
          <p class="label-edit line-height-center no-margin requis col-lg-2 col-xs-12">Votre entreprise</p>
          <div class="col-lg-3 col-xs-12 margin-right-15 no-margin-xs">
            <%= f.input :startup_id, collection: Startup.all, input_html: { class:"select2"}, :include_blank => "Créer mon entreprise", label:false, input_html: { style: "width: 100%" } %>
          </div>
          <p class="label-edit line-height-center no-margin requis col-lg-3 col-xs-12 margin-top-15-xs">Poste</p>
          <div class="col-lg-3 col-xs-12">
            <%= f.input :job, required: true, autofocus: true, label: false, input_html: { style: "width: 100%" } %>
          </div>
        </div>
      </div>

    <!-- Line 5 -->
      <div class="blue-background margin-top-background row">
        <div class="col-lg-5 col-lg-offset-4 row">
          <div class="col-xs-2">
            <%= f.input :terms_of_condition, as: :boolean, label: false, required: true, autofocus: true%>
          </div>
          <div class="col-xs-10">
            <%= link_to 'Acceptez vous les conditions générales', cgu_employeurs_path %>
          </div>
        </div>
      </div>
  </div>

  <!-- Boutons -->
    <div class="form-actions">
      <%= f.button :submit, "S'enregistrer", :class => 'btn-connexion' %>
    </div>
  <% end %>
</div>

