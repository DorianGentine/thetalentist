<%= render 'shared/navbar' %>

<div class="form-container">

  <h2 class="form-titre-page" style="margin-top: 100px;"><i class="far fa-id-badge"></i> Dites-nous qui <strong>vous êtes</strong> ?</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-grid blue-background">
      <!-- Line 1 -->
      <p class="form-label form-label-font-size requis">Prénom</p>
      <%= f.input :firstname, required: true, autofocus: true, label: false %>
      <p class="form-label form-label-font-size form-label-right-grid requis">Nom</p>
      <%= f.input :name, required: true, autofocus: true, label: false %>

      <!-- Line 2 -->
      <p class="form-label form-label-font-size requis">Email</p>
      <%= f.input :email, required: true, autofocus: true, label: false %>
      <div></div>
      <div></div>
    </div>

    <div class="form-grid blue-background margin-top-background">
      <!-- Line 3 -->
      <p class="form-label form-label-font-size requis">Mot de passe</p>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false %>
      <!-- <p class="form-label form-label-font-size requis">Confirmation du mot de passe</p> -->
      <div></div>
      <%= f.input :password_confirmation, required: true, placeholder: "Confirmation du mot de passe", label: false %>
    </div>

    <div class="form-grid blue-background margin-top-background">
      <!-- Line 4 -->
      <p class="form-label form-label-font-size requis">Votre entreprise</p>
      <%= f.input :startup_id, collection: Startup.all, input_html: { class:"select2"}, :include_blank => "Autre", label:false %>
      <p class="form-label form-label-font-size form-label-right-grid requis">Poste</p>
      <%= f.input :job, required: true, autofocus: true, label: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "S'enregistrer", :class => 'btn-connexion' %>
    </div>
  <% end %>
</div>



<%= render 'shared/footer' %>
