<%= render "shared/navbar" %>

<div class="home-container ">
  <div class="row">
    <div class="home-left col-xs-12 col-sm-6 col-lg-6">
      <div class="margin-auto-talent">
        <h1><strong>Bienvenue</strong> sur The Talentist !</h1>
        <h2>CHANGER LA DESCRIPTION Quelque soit votre talent, vous réussirez à intégrer la start-up qui vous correspond et dans laquelle vous vous épanouirez.</h2>

        <div class="home-connexion">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="connexion-item" id="icon-input">
              <div class="input-group">
                <input class="form-control string email optional" autofocus="autofocus" placeholder="exemple@gmail.com" type="email" value="" name="headhunter[email]" id="headhunter_email">
                <div class="input-group-addon">
                  <i class='fas fa-envelope'></i>
                </div>
              </div>


              <div class="input-group">
              <input class="form-control password optional" placeholder="*********" type="password" name="headhunter[password]" id="headhunter_password">
                <div class="input-group-addon">
                  <i class="fas fa-key"></i>
                </div>
              </div>
            </div>
            <div class="connexion-btns btn-aline">
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %>
              <% end -%>
            <div class="form-actions">
              <%= f.button :submit, "Se connecter", { :class => "btn form-btn form-btn-suivant"} %>
            </div>
            </div>

            <div class="choice-connexion margin-top-bottom-btn">
              <hr>
              <p>OU</p>
            </div>
            <div class="margin-top-bottom-btn">
              <div class="form-actions" id="regrister-talent-btn">
                <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                  <%= link_to "S'inscrire normalement", new_talent_registration_path, :class => "form-btn form-btn-precedent"  %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-6 hidden-xs col-sm-6">
      <div class="image-register" style="background-image: url('<%= image_path "olu-eletu-134758-unsplash.jpg" %>');">

      </div>
    </div>
  </div>
</div>


<%= render "shared/footer" %>
