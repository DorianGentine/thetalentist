<!-- Titre section -->
  <div class="titre-section-icon"><i class="titre-section-icon-illu fas fa-angle-double-right"></i></div>
  <h2 class="titre-section">Découvrir notre <strong>entreprise</strong></h2>

<!-- formulaire startup -->

<%= simple_form_for @headhunter, url: update_startup_headhunter_path(@headhunter), method: :patch, remote: false  do |u| %>
  <%= u.simple_fields_for :startup do |f| %>
  <div class="row margin-top-30">
    <div class="col-lg-6 col-xs-12">
      <p class="label-edit requis">Création</p>
      <%= f.input :year_of_creation, collection: (1960..Date.current.year).to_a.reverse, prompt: "année de création", label: false, input_html: { style: "width: 100%", class: "select2 no-search" }  %>
    </div>
    <div class="col-lg-6 col-xs-12 margin-top-15-xs">
      <p class="label-edit requis">Domaine d'acivité</p>
      <%= f.input :sector_ids, collection: Sector.all, label: false, :input_html => { style: "width: 100%", class: "select2 no-search" } %>
    </div>
  </div>

  <div class="row margin-top-15 align-items-center">
    <div class="col-lg-6 col-xs-12">
      <p class="label-edit requis">Nombre d'employés</p>
      <%= f.input :collaborators, as: :integer, label: false, input_html: { style: "width: 100%", min: "0", max: "1000000000", class: "sup-zero" } %>
    </div>
    <div class="col-lg-6 col-xs-12 margin-top-15-xs">
      <!-- <p class="label-edit requis">Secteur</p> -->
      <div class="row">
        <div class="col-xs-6">
          <%= f.input :btoc, label: "BTOC" %>
        </div>
        <div class="col-xs-6">
          <%= f.input :btob, label: "BTOB" %>
        </div>
      </div>
    </div>
  </div>

  <div class="row margin-top-15">
    <div class="col-lg-6 col-xs-12">
      <p class="label-edit requis">Âge moyen</p>
      <%= f.input :average_age, label: false, :input_html => { :type => "number", style: "width: 100%", min: "0", max:"100", class: "sup-zero" } %>
    </div>
  </div>

<!-- Titre section -->
  <div class="titre-section-icon margin-top-60"><i class="titre-section-icon-illu fas fa-angle-double-right"></i></div>
  <h2 class="titre-section margin-top-60">Les <strong>atouts</strong></h2>


  <div class="row margin-top-15">
    <div class="col-lg-6 col-xs-12" id="startup_words">
      <p class="label-edit requis">Ce qui vous définit</p>
      <%= f.input :word_ids, collection: Word.all, input_html: { :class => "selectAndCreate", multiple: "multiple", style: "width: 100%"}, include_blank: true, label: false %>
    </div>
  </div>


<!-- Titre section -->
  <div class="titre-section-icon margin-top-60"><i class="titre-section-icon-illu fas fa-angle-double-right"></i></div>
  <h2 class="titre-section margin-top-60">Description & <strong>missions</strong></h2>

  <div class="row margin-top-30">
    <div class="col-lg-6 col-xs-12">
      <p class="label-edit requis">Description</p>
      <%= f.input :overview, label: false, input_html: { style: "width: 100%", rows: 4 }  %>
    </div>
    <div class="col-lg-6 col-xs-12 margin-top-15-xs">
      <p class="label-edit requis">Rejoindre notre entreprise c'est :</p>
      <%= f.input :mission, as: :text, label: false, :input_html => { style: "width: 100%", rows: 4 } %>
    </div>
  </div>


  <% end %>
  <%= render '/talents/edit_validations_buttons', f: u %>
<% end %>














