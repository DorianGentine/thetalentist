<%= render "shared/navbar" %>
<%= render 'profil' %>
<%= render 'headhunters' %>
<%= render 'figures' %>
<%= render 'overview' %>
<%= render 'pictures' %>

<div class="container-show">

  <div class="talent-left">
    <% if current_user.is_a?(Headhunter) %>
      <p data-target= "modal_profil" class= "modal-button btn-edition"><span> <i class="far fa-edit"></i></span></p>
    <% end %>

    <% if @startup.logo.present? %>

      <div class="photo-profil" style="background-image: url('<%= cl_image_path @startup.logo, :transformation=>[ :gravity=>"face"] %>');">
        <div class="statut"></div>
      </div>

    <% else %>

      <div class="photo-profil">
        <div class="initiale">
          <p><%= @startup.name.split(//).first.upcase %><%= @startup.name.split(//).second.upcase %></p>
        </div>
        <div class="statut"></div>
      </div>

    <% end %>



    <div class="talent-name">
      <h1><%= @headhunter.startup.name %></h1>
      <h2 class="talent-post"><%= @startup.link %></h2>
    </div>
    <div class="talent-info">
      <div class="talent-info-item card-dispsition">
        <p class="icon icon-info"><i class="fas fa-map-marker-alt"></i></p>
        <p><%= @startup.address.present? ? @startup.address : "Ajouter votre localisation" %></p>
      </div>
      <div class="talent-info-item card-dispsition">
        <p class="icon icon-info"><i class="far fa-compass"></i></p>
        <!-- <p>Marketing (TODO)</p> -->
        <p><%= @startup.sectors.last.present? ? @startup.sectors.last.title : "Ajouter votre localisation" %></p>
      </div>
      <div class="talent-info-item card-dispsition">
        <p class="icon icon-info"><i class="fas fa-code-branch"></i></p>
        <p> <%= @startup.btob ? "BtoB" : ""%> <%= @startup.btob && @startup.btoc ? "&" : "" %><%= @startup.btoc ? "BtoC" : ""%> <%= @startup.btoc || @startup.btob ? "" : "Ajouter votre secteur d'activité" %></p>
      </div>
    </div>

    <div class="lower-body-item lower-right-body">
      <div class="lower-right-body-item hidden-xs">
        <h4><i class="fas fa-sliders-h"></i> Ce qui nous définit</h4>
        <div class="talent-competences">
          <% if @startup.startup_words.present? %>
            <% @startup.startup_words do |word| %>
              <p><%= word.word.title %></p>
            <% end %>
          <% else %>
            <p> + Ajouter se qui vous définit </p>
          <% end %>
        </div>
      </div>
      <!-- <#% if current_user.is_a?(Headhunter) %>
        <p data-target= "modal_headhunters" class= "modal-button btn-edition"><span> <i class="far fa-edit"></i></span></p>
      <#% end %> -->
      <div class="lower-right-body-item hidden-xs">
        <h4><i class="fas fa-search-plus"></i> Nos Headhunters</h4>
        <div class="talent-competences">
          <% if @startup.headhunters.present? %>
            <% @startup.headhunters.each do |headhunter| %>
              <p><%= headhunter.firstname.present? ? headhunter.firstname : "" %> <%= headhunter.name.present? ? headhunter.name : '' %></p>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>


  <div class="talent-right">

    <div class="headhunter-right-up">
     <!--  <#% if current_user.is_a?(Headhunter) %>
        <p data-target= "modal_pictures" class= "modal-button btn-edition"><span> <i class="far fa-edit"></i></span></p>
