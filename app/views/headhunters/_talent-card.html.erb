<div class="talent-card">
  <div class="card-title">
      <p>LE TALENT</p>
  </div>

  <div class="illu-card"></div>

  <div class="border">

    <div class="talent-job">
      <h2><%= talent.experiences.last.position %></h2>
    </div>

    <div class="talent-info">
      <div class="talent-city talent-info-item card-dispsition">
        <p class="icon icon-info"><i class="fas fa-map-marker-alt"></i></p>
        <p><%= talent.city %></p>
      </div>
      <div class="talent-btob talent-info-item card-dispsition">
        <p class="icon icon-info"><i class="fas fa-code-branch"></i></p>
        <% if talent.btoc && talent.btob %>
          <p> BTOB & BTOC</p>
        <% elsif talent.btoc %>
          <p>BTOB</p>
        <% else %>
          <p>BTOC</p>
        <% end %>
      </div>
      <div class="talent-cdi talent-info-item card-dispsition">
        <p class="icon icon-info"><i class="fas fa-briefcase"></i></p>
        <p>CDI</p>
      </div>
    </div>

    <% talent.talent_formations.first(2).each do |formation| %>
      <div class="talent-school-1 card-dispsition">
        <p class="icon"><i class="fas fa-graduation-cap"></i></p>
        <p><%= formation.formation.title %> - <%= formation.title %></p>
        <!-- <p>HEC, Master entrepreneuriat - 2015</p> -->
      </div>
        <!--
        TODO: j'ai fait un each se qui permet dévité les répétions de code, a toi de voir si mieux ou pas. Je te laisse le supprmié
        <div class="talent-school-2 card-dispsition">
        <p class="icon"><i class="fas fa-graduation-cap"></i></p>
        <p><%= formation.formation.title %></p>
      </div> -->
    <% end %>
    <div class="talent-description">
      <p><%= truncate(talent.overview, length: 250) %></p>
    </div>




    <div class="talent-update card-dispsition">
      <p class="icon"><i class="far fa-clock"></i></p>
      <p>Mise à jour le <%= l(talent.updated_at, :format => '%d %B %Y') %> </p>
    </div>

    <div class="talent-more">
      <%= link_to talent_path(talent) do %>
        En savoir plus <i class="fas fa-angle-right"></i>
      <% end %>
    </div>
  </div>
</div>
