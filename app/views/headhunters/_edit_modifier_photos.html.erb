<!-- Titre section -->
  <div class="titre-section-icon"><i class="titre-section-icon-illu fas fa-angle-double-right"></i></div>
  <h2 class="titre-section">Votre environnement <strong>en photos</strong></h2>

<!-- modifier photos -->

<%= simple_form_for @startup, url: update_photos_headhunter_path(@headhunter), method: :patch, remote: false  do |f| %>

  <div class="row">
    <%= f.simple_fields_for :pictures do |u| %>
      <% random_num = "#{rand(1...100)}" + "a" + "#{rand(1...100)}" %>
      <!-- si photo prÃ©sente -->
        <div class="col-lg-4 col-xs-12 margin-top-30">
          <div class="margin-right-15 no-margin-xs input-none">
            <label for="avatar-upload<%= random_num %>" class="btn-avatar" data-target="<%= random_num %>" id="edit-photo" style="width: 100%">
              <div class="relative pointer" id="no_img<%= random_num %>" style="height: 200px;">
                <img id="img_prev<%= random_num %>" src="<%= u.object.photo? ? u.object.photo : "https://images.homedepot-static.com/productImages/fc91cb23-b6db-4d32-b02a-f1ed61dd39a8/svn/folkstone-matte-formica-laminate-sheets-009271258408000-64_400_compressed.jpg" %>" alt="votre image" style="object-fit: cover; height: 100%; width: 100%;"/>
                <i class="fas fa-edit white absolute-center" style="font-size: 25px"></i>
              </div>
            </label>

            <label for="avatar-upload<%= random_num %>" class="pointer">
              <i class="fas fa-edit float-left black margin-top-15 margin-left-15" style="font-size: 25px"></i>
            </label>

            <label for="avatar-remove<%= random_num %>" class="float-right pointer btn-avatar" data-target="<%= random_num %>">
              <i class="fas fa-trash-alt black margin-top-15 margin-right-15" style="font-size: 25px"></i>
            </label>

            <%= u.file_field :photo, id:"avatar-upload#{random_num}", as: :hidden %>
            <%= u.hidden_field :photo_cache, as: :hidden %>
            <%= u.check_box :remove_photo, id:"avatar-remove#{random_num}" %>

          </div>
        </div>
    <% end %>
  </div>

  <%= render '/talents/edit_validations_buttons', f: f %>
<% end %>
