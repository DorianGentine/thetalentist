<div id="modal_overview" class="modal">

  <div class="modal-content">

    <div class="modal-header">
      <h3>Modifiez vos infos</h3>

      <span class="close">
        <p>&times;</p>
      </span>

    </div>
    <div class="modal-body">
      <%= simple_form_for @startup do |f| %>
        <%= f.input :overview %>
        <%= f.input :mission %>
        <div class="form-actions">
          <%= f.submit "Terminer", class: "b-btn form-btn form-btn-suivant" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
